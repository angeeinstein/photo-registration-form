# Environment Variables
# Copy this file to .env and update with your values

# Flask Configuration
SECRET_KEY=your-secret-key-change-me-in-production
FLASK_ENV=production
FLASK_APP=app.py

# Database (SQLite is default, can switch to PostgreSQL)
# DATABASE_URI=sqlite:///registrations.db
# DATABASE_URI=postgresql://user:password@localhost/photo_registration

# Gunicorn Server Configuration
# For localhost only (default): 127.0.0.1:5000
# For network access (Cloudflare Tunnel on different machine): 0.0.0.0:5000
# For port 80 network access (requires privileges): 0.0.0.0:80
GUNICORN_BIND=127.0.0.1:5000
WORKERS=4

# Email Configuration
# SMTP Server settings
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_USE_TLS=true
SMTP_USE_SSL=false
SMTP_FROM_EMAIL=your-email@gmail.com
SMTP_FROM_NAME=Photo Registration

# Email Features
# Enable/disable automatic confirmation emails
SEND_CONFIRMATION_EMAIL=true
CONFIRMATION_EMAIL_SUBJECT=Registration Confirmation - Thank You!

# Photos email settings
PHOTOS_EMAIL_SUBJECT=Your Event Photos Are Ready!

# Test email address (for testing email configuration)
TEST_EMAIL=your-email@gmail.com

# Admin Panel Configuration
ADMIN_USERNAME=admin
ADMIN_PASSWORD=change-me-in-production
ADMIN_SESSION_SECRET=another-secret-key-change-me
